{
  "manifest_version": 3,
  "name": "Right-Click Search New World DB",
  "description": "Quickly search for item info on nwdb.info via right-click",
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["/results/index.html", "/popup/css/bootstrap.min.css"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "icons": {
    "16": "nwdbinfo.png",
    "48": "nwdbinfo.png"
  },
  "permissions": ["contextMenus", "tabs", "scripting", "alarms", "storage", "nativeMessaging"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "version": "1.31"
}
